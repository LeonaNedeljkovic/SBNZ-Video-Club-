rule "Punish unwwatched genre"
	lock-on-active
    when
        $recommendation : RecommendedFilm( $points : recommendPoints, $film : film );
        $conclusion : UserConclusion( $badges : badges, $reviewsSize : user.getReviews().size() );
        GenreBadge(unwatchedTime == 0, watchedTime == 0, averageRate == 0, genre == $film.getGenre() ) 
        	from $badges
        or
        GenreBadge(unwatchedTime > watchedTime, genre == $film.getGenre() ) 
        	from $badges;
    then
        $recommendation.setRecommendPoints($points-$reviewsSize);
        System.out.println("Film: "+ $film.getName() + " lost 100"+
        " points for unwwatched genre");
        update($conclusion);
        update($recommendation);
end

